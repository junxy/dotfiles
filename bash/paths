
# $1 name of the variable
# $2 path to the dir
# $3 prepend $2/bin to PATH? true if set
function set_env_var {
	if [ -d "$2" ]; then
		export "$1"=$2
		if [ -n "$3" ]; then
			if [ -d "$2"/bin ]; then
				export PATH="$2"/bin:$PATH;
			else
				echo Directory not found! $2/bin
			fi
		fi
	else
		echo Directory not found! $2
	fi
}

set_env_var JAVA6_HOME  /System/Library/Frameworks/JavaVM.framework/Versions/1.6.0/Home true
set_env_var JAVA_HOME  $JAVA6_HOME true
set_env_var IDEA_HOME /usr/local/java/idea-7941
set_env_var IDEA_JDK $JAVA6_HOME

unset set_env_var

# MacPorts Installer addition on 2009-04-26_at_15:30:59: adding an appropriate PATH variable for use with MacPorts.
export PATH=/opt/local/bin:/opt/local/sbin:$PATH
export MANPATH=/opt/local/share/man:$MANPATH

