# OS specific support.  $var _must_ be set to either true or false.
linux=false
darwin=false
case "`uname`" in
  Linux*) linux=true;;
  Darwin*) darwin=true;;
esac

if $darwin; then
  JAVA6_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/1.6.0/Home
  # MacPorts Installer addition on 2009-04-26_at_15:30:59: adding an appropriate PATH variable for use with MacPorts.
  export PATH=/opt/local/bin:/opt/local/sbin:$PATH
  export MANPATH=/opt/local/share/man:$MANPATH
elif $linux; then
  export JAVA6_HOME=/opt/jdk1.6.0_20;
  export IDEA_HOME=/opt/idea-IU-93.94
fi


export JAVA_HOME=$JAVA6_HOME; export PATH=$JAVA_HOME/bin:$PATH
export IDEA_JDK=$JAVA6_HOME
export QIZX_HOME='/opt/qizx'
export ANT_HOME='/opt/ant'
export ECLIPSE_HOME='/opt/eclipse'
export SQL_DEVELOPER='/opt/sqldeveloper'

export C3=$HOME/w/c3main
export EC2_HOME=$HOME/alexis/local/ec2-api-tools-1.3-62308
export EC2_PRIVATE_KEY=$HOME/alexis/.ec2/pk-VYSM365NGDNPUO6TS6FWYW3WU4ST3KWI.pem
export EC2_CERT=$HOME/alexis/.ec2/cert-VYSM365NGDNPUO6TS6FWYW3WU4ST3KWI.pem

export PATH="~/.bin:$EC2_HOME/bin:$SQL_DEVELOPER:$ECLIPSE_HOME:$QIZX_HOME/bin:$ANT_HOME/bin:$PATH"

