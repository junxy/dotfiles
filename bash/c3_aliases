
# C3 stuffs
alias c3="$C3/target/c3_server"
alias cds="cd $C3"
alias cda="cd $HOME/w/c3apps"
alias cdc="cd $HOME/w/c3client"
alias cdt="cd $HOME/w/c3test"
alias log="less +F ~/c3log/c3_server.log"
alias zkh='for f in {1..3}; do echo "$f --------- "; ssh zk$f "sudo /usr/local/zk/bin/zkServer.sh status "; done'
alias cfc='rm -vrf ~/.macromedia/Flash_Player/#SharedObjects/ ~/.adobe/Flash_Player/AssetCache/'

# start oracle vm
alias sovm='VBoxManage startvm oraclevm'
# kill oracle vm
alias kovm='VBoxManage controlvm oraclevm poweroff'
# restore 'cleandb' snapshot
alias rovm='VBoxManage snapshot oraclevm restore cleandbsetcursors'
# kill, restore and restart
alias covm='kovm && rovm && sovm'

alias cc='$C3/cassandra stop && rm -rf $C3/data && $C3/cassandra start && sleep 2 && sd $C3/cassandra loadYaml'
function wpl { mv -v ~/c3log/c3_server.log ~/c3log/c3_server.log.$(date +%s); }
function zkb {
  for f in {1..3}; do echo "zk$f --------- "; ssh zk$f "$@"; done
}

# grep c3_server_log
function gl {
  grep "$@" ~/c3log/c3_server_0.log
}

function c3env {
  export JRUBY_HOME=$C3/config/jruby
  export PATH=$JRUBY_HOME/bin:$PATH
  export C3_ENV='dev'
  export C3_CLIENT_URL=http://localhost:8080
  export PROF_ARGS="-agentpath:$YJP_HOME/bin/linux-x86-64/libyjpagent.so"
}

function mvnenv {
  export MAVEN_HOME=$HOME/local/apache-maven-3.0.4
  export PATH=$MAVEN_HOME/bin:$PATH
}

function scalaenv {
  export SCALA_HOME=~/local/typesafe-stack
  export PATH=$SCALA_HOME/bin:$PATH
}
